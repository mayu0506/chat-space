.chat-main
  -# 右側チャットメイン画面のグループ名部分
  .main-header
    .current-group
      %h2.current-group__name sample
      %ul.current-group__member-list 
        Member：
        %li.current-group__member-list__member seo neko
    = link_to 'Edit', :controller => 'groups', :action => 'edit' do
      .main-header__edit-btn Edit
  .messages
    = render 'groups/messages'
  .form
    .new-message
      .input-box
        %input{type: "text", class:"input-box__text", placeholder: "type a message"}
        %label.image-label
          %i.fa.fa-image
      %input{type:"submit", value:"Send", class:"new-message__submit-btn"}


